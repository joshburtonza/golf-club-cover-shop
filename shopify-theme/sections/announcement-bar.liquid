<div class="announcement-bar" data-section-id="{{ section.id }}">
  <div class="announcement-bar__track">
    {%- for i in (1..2) -%}
      {%- for block in section.blocks -%}
        <span class="announcement-bar__item" {{ block.shopify_attributes }}>
          {{ block.settings.text }}
          <span class="announcement-bar__sep">&bull;</span>
        </span>
      {%- endfor -%}
    {%- endfor -%}
  </div>
</div>

