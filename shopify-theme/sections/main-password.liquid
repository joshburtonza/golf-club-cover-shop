<div style="min-height:100vh;display:flex;align-items:center;justify-content:center;background:var(--gradient-warm);padding:2rem;">
  <div style="max-width:28rem;width:100%;text-align:center;">
    <h1 style="font-family:var(--font-display);font-size:3rem;color:var(--color-foreground);margin-bottom:0.5rem;">
      TOPPED <span style="color:var(--color-accent);">IT</span>
    </h1>
    <p style="font-family:var(--font-body);font-size:1.125rem;color:var(--color-muted-foreground);margin-bottom:2rem;">
      {{ shop.password_message | default: "We're getting ready to tee off. Check back soon!" }}
    </p>

    {%- form 'storefront_password' -%}
      <div style="display:flex;gap:0.5rem;max-width:24rem;margin:0 auto;">
        <input
          type="password"
          name="password"
          placeholder="Enter password"
          style="flex:1;padding:0.75rem 1rem;border:1px solid var(--color-border);border-radius:var(--radius);font-family:var(--font-body);background:var(--color-background);"
        >
        <button type="submit" class="btn btn-walnut">Enter</button>
      </div>
      {%- if form.errors -%}
        <p style="color:var(--color-destructive);font-size:0.875rem;margin-top:0.5rem;">
          {{ form.errors.messages['password'] }}
        </p>
      {%- endif -%}
    {%- endform -%}

    <p style="margin-top:3rem;font-size:0.75rem;color:var(--color-muted-foreground);">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}
    </p>
  </div>
</div>

{% schema %}
{
  "name": "Password Page",
  "settings": [],
  "templates": ["password"]
}
{% endschema %}
