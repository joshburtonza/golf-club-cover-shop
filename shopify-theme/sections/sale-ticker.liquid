{%- if settings.show_sale_ticker -%}
<div class="sale-ticker" id="sale-ticker" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="sale-ticker__inner">
      <div class="sale-ticker__label">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8.5 14.5A2.5 2.5 0 0011 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 11-14 0c0-1.153.433-2.294 1-3a2.5 2.5 0 002.5 2.5z"/></svg>
        <span>{{ settings.sale_discount_percent }}% OFF SALE</span>
      </div>

      <div class="sale-ticker__divider"></div>

      <div class="sale-ticker__countdown">
        <svg class="icon--sm" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
        <span class="sale-ticker__countdown-label">Ends in:</span>
        <span class="sale-ticker__time-unit" data-days>0d</span>
        <span class="sale-ticker__time-sep">:</span>
        <span class="sale-ticker__time-unit" data-hours>00</span>
        <span class="sale-ticker__time-sep">:</span>
        <span class="sale-ticker__time-unit" data-minutes>00</span>
        <span class="sale-ticker__time-sep">:</span>
        <span class="sale-ticker__time-unit" data-seconds>00</span>
      </div>
    </div>
  </div>
</div>
{%- endif -%}

{% schema %}
{
  "name": "Sale Ticker",
  "class": "sale-ticker-section",
  "settings": [
    {
      "type": "range",
      "id": "cycle_days",
      "label": "Sale cycle (days)",
      "min": 1,
      "max": 14,
      "default": 3
    }
  ]
}
{% endschema %}
