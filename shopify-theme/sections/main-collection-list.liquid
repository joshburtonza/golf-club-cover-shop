<section style="padding-top:var(--header-height);padding-bottom:4rem;">
  <div class="container">
    <h1 style="font-family:var(--font-display);font-size:2.5rem;text-align:center;padding:2rem 0;color:var(--color-foreground);">
      Collections
    </h1>
    <div class="collection-page__grid">
      {%- for collection in collections -%}
        {%- unless collection.handle == 'frontpage' -%}
          <a href="{{ collection.url }}" class="collection-product-card">
            <div class="collection-product-card__image">
              {%- if collection.image -%}
                <img src="{{ collection.image | image_url: width: 600 }}" alt="{{ collection.title }}" loading="lazy">
              {%- elsif collection.products.first.featured_image -%}
                <img src="{{ collection.products.first.featured_image | image_url: width: 600 }}" alt="{{ collection.title }}" loading="lazy">
              {%- else -%}
                {{ 'collection-1' | placeholder_svg_tag }}
              {%- endif -%}
            </div>
            <div class="collection-product-card__info">
              <h3 class="collection-product-card__title">{{ collection.title }}</h3>
              <span style="font-size:0.875rem;color:var(--color-muted-foreground);">{{ collection.all_products_count }} products</span>
            </div>
          </a>
        {%- endunless -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection List",
  "settings": [],
  "templates": ["list-collections"]
}
{% endschema %}
