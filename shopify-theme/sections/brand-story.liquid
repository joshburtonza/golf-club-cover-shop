{% schema %}
{
  "name": "Brand Story",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "The Story"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why \"Topped It\"?"
    }
  ],
  "blocks": [
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Every golfer knows the feeling. You've set up perfectly. Waggle complete. Backswing smooth. And then... <em>thwack</em>.</p>"
