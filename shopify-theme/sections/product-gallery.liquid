<section class="product-gallery" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="text-center" style="margin-bottom:3rem;">
      <span class="section__label">{{ section.settings.subtitle }}</span>
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      <p class="section__subtext">{{ section.settings.description }}</p>
    </div>

    <div class="product-gallery__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'style_gallery' -%}
          <div class="product-gallery__style" {{ block.shopify_attributes }}>
            <div style="margin-bottom:1.5rem;">
              <h3 class="product-gallery__style-title">{{ block.settings.title }}</h3>
              <p class="product-gallery__style-subtitle">{{ block.settings.subtitle }}</p>
            </div>

            {%- assign gallery_images = block.settings.image_1 | default: nil -%}
            <div class="product-gallery__main-image" data-gallery="{{ block.id }}">
              {%- if block.settings.image_1 -%}
                <img
                  src="{{ block.settings.image_1 | image_url: width: 800 }}"
                  alt="{{ block.settings.title }} - Image 1"
                  id="gallery-main-{{ block.id }}"
                  loading="lazy"
                >
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag }}
              {%- endif -%}
            </div>

            <div class="product-gallery__thumbs">
              {%- if block.settings.image_1 -%}
                <button
                  class="product-gallery__thumb active"
                  onclick="changeGalleryImage('{{ block.id }}', '{{ block.settings.image_1 | image_url: width: 800 }}', this)"
                >
                  <img src="{{ block.settings.image_1 | image_url: width: 200 }}" alt="{{ block.settings.title }} 1" loading="lazy">
                </button>
              {%- endif -%}
              {%- if block.settings.image_2 -%}
                <button
                  class="product-gallery__thumb"
                  onclick="changeGalleryImage('{{ block.id }}', '{{ block.settings.image_2 | image_url: width: 800 }}', this)"
                >
                  <img src="{{ block.settings.image_2 | image_url: width: 200 }}" alt="{{ block.settings.title }} 2" loading="lazy">
                </button>
              {%- endif -%}
              {%- if block.settings.image_3 -%}
                <button
                  class="product-gallery__thumb"
                  onclick="changeGalleryImage('{{ block.id }}', '{{ block.settings.image_3 | image_url: width: 800 }}', this)"
                >
                  <img src="{{ block.settings.image_3 | image_url: width: 200 }}" alt="{{ block.settings.title }} 3" loading="lazy">
                </button>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

    <!-- Features -->
    <div class="product-gallery__features">
      <h3 class="product-gallery__features-title">What You Get</h3>
      <div class="product-gallery__features-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'feature' -%}
            <div class="product-gallery__feature" {{ block.shopify_attributes }}>
              <div class="product-gallery__feature-dot"></div>
              <div>
                <span style="font-weight:500;color:var(--color-foreground);">{{ block.settings.title }}</span>
                <span style="color:var(--color-muted-foreground);"> &mdash; {{ block.settings.description }}</span>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>

      {%- if section.settings.testimonial_text != blank -%}
        <div class="product-gallery__testimonial">
          <p class="product-gallery__testimonial-quote">"{{ section.settings.testimonial_text }}"</p>
          <p class="product-gallery__testimonial-author">&mdash; {{ section.settings.testimonial_author }}</p>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

